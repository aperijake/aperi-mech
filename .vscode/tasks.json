{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make",
      "type": "shell",
      "command": "./do_configure; cd ../stk-crk_build; make",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "make_debug",
      "type": "shell",
      "command": "./do_configure --build-type Debug; cd ../stk-crk_build; make",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "make_coverage",
      "type": "shell",
      "command": "./do_configure --code-coverage; cd ../stk-crk_build; make coverage",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
